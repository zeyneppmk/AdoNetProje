@page
@model pzt_adoNetCore.Pages.Users.EditModel
@{
}
<form method="post">
    <input type="hidden" name="ID" value="@Model.userbilgi.ID" />


    <div class="row mb-3">

        <label class="col-sm-3">Ad Soyad</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="fullName" value="@Model.userbilgi.fullName" />

        </div>

    </div>

    <div class="row mb-3">

        <label class="col-sm-3">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.userbilgi.email" />

        </div>

    </div>

    <div class="row mb-3">

        <label class="col-sm-3">Telefon</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="telefon" value="@Model.userbilgi.telefon" />

        </div>

    </div>

    <div class="row mb-3">

        <label class="col-sm-3">Kullanıcı Rolü</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="userrole" value="@Model.userbilgi.userRole" />

        </div>

    </div>

    <div class="row mb-3">

        <label class="col-sm-3">Şifre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="sifre" value="@Model.userbilgi.sifre" />

        </div>

    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Kaydet</button>

        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/">İPTAL</a>

        </div>

    </div>
</form>

